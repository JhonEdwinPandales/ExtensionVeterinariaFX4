<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.extensionveterinariafx4.MascotaController"
      spacing="10">

    <!-- ✅ Padding corregido -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label text="Gestión de Mascotas" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="Nombre:"/>
        <TextField fx:id="nombreField" promptText="Nombre de la mascota" />
    </HBox>

    <HBox spacing="10">
        <Label text="Tipo:"/>
        <ComboBox fx:id="tipoCombo" prefWidth="150" />
    </HBox>

    <HBox spacing="10">
        <Label text="Edad:"/>
        <TextField fx:id="edadField" promptText="Edad en años" />
    </HBox>

    <HBox spacing="10">
        <Label text="Dueño:"/>
        <TextField fx:id="duenoField" promptText="Nombre del propietario" />
    </HBox>

    <HBox spacing="10">
        <Label text="Categoría:"/>
        <ComboBox fx:id="categoriaCombo" prefWidth="150" />
    </HBox>

    <HBox spacing="15">
        <Button text="Agregar Mascota" fx:id="agregarButton" onAction="#agregarMascota"/>
        <Button text="Eliminar Mascota" fx:id="eliminarButton" onAction="#eliminarMascota"/>
        <Button text="Calcular Consulta" fx:id="calcularButton" onAction="#calcularConsulta"/>
    </HBox>

    <TableView fx:id="tablaMascotas" prefHeight="250" prefWidth="500">
        <columns>
            <TableColumn fx:id="columnaNombre" text="Nombre" prefWidth="100"/>
            <TableColumn fx:id="columnaTipo" text="Tipo" prefWidth="100"/>
            <TableColumn fx:id="columnaEdad" text="Edad" prefWidth="100"/>
            <TableColumn fx:id="columnaDueno" text="Dueño" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>
